server {

        listen [::]:80;
        listen 80;
        root /var/www/chyrp;

        index index.php;

        server_name <PLACE_HOLDER>;

        location / {
                try_files $uri $uri/ =404;
        }
        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/run/php/php8.1-fpm.sock;
        }
}